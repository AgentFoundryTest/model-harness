{
  "name": "mlp-classification-example",
  "description": "Multi-layer perceptron for binary classification",
  "dataset": {
    "name": "synthetic_classification",
    "params": {
      "n_samples": 1000,
      "n_features": 20,
      "n_classes": 2,
      "class_sep": 2.0,
      "seed": 42
    }
  },
  "model": {
    "name": "mlp",
    "params": {
      "layer_sizes": [20, 10, 5, 2],
      "activation": "relu",
      "output_activation": "softmax",
      "seed": 42
    }
  },
  "training": {
    "epochs": 100,
    "batch_size": 32,
    "learning_rate": 0.01,
    "optimizer": "sgd",
    "seed": 42
  },
  "output": {
    "directory": "runs",
    "save_checkpoints": true,
    "checkpoint_frequency": 20,
    "save_logs": true
  }
}
